<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="CircleIndicator">
        <attr name="indicatorWidth" format="dimension" />
        <attr name="indicatorHeight" format="dimension" />
        <attr name="indicatorMargin" format="dimension" />
        <attr name="indicatorAnimatorOut" format="reference" />
        <attr name="indicatorAnimatorIn" format="reference" />
        <attr name="indicatorBackground" format="reference" />
    </declare-styleable>

</resources>
