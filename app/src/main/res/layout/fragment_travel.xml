<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@drawable/travel_viewpager_title_bg"
        android:minWidth="100dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textTitle1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/travel_viewpager_left_title_bg"
            android:gravity="center"
            android:text="地图"
            android:textColor="@color/travel_viewpager_title_text_color"
            android:textSize="@dimen/text_large_size" />

        <TextView
            android:id="@+id/textTitle2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/travel_viewpager_right_title_bg"
            android:gravity="center"
            android:text="简介"
            android:textColor="@color/travel_viewpager_title_text_color"
            android:textSize="@dimen/text_large_size" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpagerTravel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>
</LinearLayout>